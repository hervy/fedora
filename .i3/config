#Web browser 2

bindsym $mod+w mode "$mode_web"
set $mode_web WEB > Afirefox Behance Codeacademy Duckduckgo Email Facebook Instagram Messenger gOo.gl Pinterest toRRent Telegram Whatsapp Youtube priVate 
mode "$mode_web" {
    bindsym a exec --no-startup-id firefox, mode "default"
    bindsym b exec --no-startup-id firefox https://www.behance.net/, mode "default"
    bindsym c exec --no-startup-id firefox www.codecademy.com, mode "default"
    bindsym d exec --no-startup-id firefox www.duckduckgo.com/, mode "default"
    bindsym e exec --no-startup-id firefox https://accounts.google.com/ServiceLogin?continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&service=mail&sacu=1&rip=1, mode "default"
    bindsym f exec --no-startup-id firefox www.facebook.com, mode "default"
    #bindsym h exec --no-startup-id firefox, mode "default"
    bindsym i exec --no-startup-id firefox www.instagram.com, mode "default"
    #bindsym j exec --no-startup-id firefox, mode "default"
    #bindsym k exec --no-startup-id firefox, mode "default"
    #bindsym l exec --no-startup-id firefox, mode "default"
    bindsym m exec --no-startup-id firefox www.messenger.com, mode "default"
    #bindsym n exec --no-startup-id firefox, mode "default"
    bindsym o exec --no-startup-id firefox https://goo.gl/, mode "default"
    bindsym p exec --no-startup-id firefox https://www.pinterest.com/, mode "default"
    #bindsym q exec --no-startup-id firefox, mode "default"
    bindsym r exec --no-startup-id firefox https://torrentz2.eu/, mode "default"
    #bindsym s exec --no-startup-id firefox, mode "default"
    bindsym t exec --no-startup-id firefox https://web.telegram.org/#/im, mode "default"
    #bindsym u exec --no-startup-id firefox, mode "default"
    bindsym v exec --no-startup-id firefox --private-window, mode "default"
    bindsym w exec --no-startup-id firefox web.whatsapp.com, mode "default"
    #bindsym x exec --no-startup-id firefox, mode "default"
    bindsym y exec --no-startup-id firefox www.youtube.com, mode "default"
    #bindsym z exec --no-startup-id firefox, mode "default"
    bindsym 3 exec --no-startup-id firefox w3/index.html, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}

