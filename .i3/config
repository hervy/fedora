#VERSI 2: untuk fedora
bindsym $mod+Shift+q mode "$mode_system"
set $mode_system SYSTEM > Shutdown Restart Pending Exit Lock
mode "$mode_system" {
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym r exec --no-startup-id systemctl reboot -i, mode "default"
    bindsym l exec --no-startup-id i3lock -c 000000 , mode "default"
    bindsym p exec --no-startup-id systemctl suspend -i, mode "default"
    bindsym e exec "i3-nagbar -t warning -m 'Anda mau keluar dari desktop I3-WM ?' -b 'Iya, Benar' 'i3-msg exit'", mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}

